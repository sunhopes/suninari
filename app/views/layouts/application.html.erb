<!DOCTYPE html>
<html>
  <head>
    <title>Glycan Pathway Registration</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <script src="//code.jquery.com/jquery-1.11.2.min.js"></script> %>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
    </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <%#= link_to 'gpathway', root_path, class: "navbar-brand" %>
    <%# <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="navication_change">
      <span class="navbar-toggler-icon"></span>
    </button> %>
    <% if user_signed_in? %>
      <div class="collapse navbar-collapse" id="Navber">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
              <%= link_to 'New Pathway', new_gpathway_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
              <%= link_to 'Pathway List', gpathways_path, class: "nav-link" %>
          </li>
        </ul>
      </div> 
      <div class="navbar-collapse collapse">
        <ul class="navbar-nav ml-auto"> 
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
        </ul> 
      </div>  
        
    <% else %>
      <div class="collapse navbar-collapse" id="Navber">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Login', new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Registration', new_user_registration_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    <% end %>
  </nav>
  <%# flash message %>
    <% if flash[:notice] %>
      <div class="alert alert-primary" role="alert"><strong><%= notice %></strong></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert"><strong><%= alert %></strong></div>
    <% end %>
    <%= yield %>
  </body>
</html>
